@model IEnumerable<Assignment2tga.Models.BookingModel>

@{
    ViewBag.Title = "Manage Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Bookings</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

@if (!Model.Any())
{
    <p>No bookings found.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().CustomerID)</th>
                <th>@Html.DisplayNameFor(model => model.First().TourID)</th>
                <th>@Html.DisplayNameFor(model => model.First().BookingDate)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CustomerID</td>
                    <td>@item.TourID</td>
                    <td>@item.BookingDate.ToShortDateString()</td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
