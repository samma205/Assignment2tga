@model Assignment2tga.Models.BookingModel

@{
    ViewBag.Title = "Edit Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Booking</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.CustomerID)
        @Html.TextBoxFor(model => model.CustomerID, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TourID)
        @Html.TextBoxFor(model => model.TourID, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.BookingDate)
        @Html.TextBoxFor(model => model.BookingDate, new { @class = "form-control", type = "date" })
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
}
