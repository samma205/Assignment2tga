@{
    ViewBag.Title = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="text-center bg-light p-5 rounded shadow-sm">
        <h1 class="display-4">Admin Dashboard - Tour Guide Adventures</h1>
        <p class="lead">Welcome back! Use the dashboard below to manage tours, bookings, guides, feedback, and special deals.</p>
    </div>

    <div class="row text-center mt-5">
        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Manage Tours</h5>
                    <p class="card-text">View, create, update or delete tour records.</p>
                    <a href="/Tour/Index" class="btn btn-outline-primary">Go to Tours</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Manage Deals</h5>
                    <p class="card-text">Add or update special promotional deals.</p>
                    <a href="/SpecialDeals/Index" class="btn btn-outline-success">View Deals</a>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Manage Bookings</h5>
                    <p class="card-text">Review or manage customer bookings.</p>
                    <a href="/Booking/Index" class="btn btn-outline-warning">Go to Bookings</a>


                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Review Feedback</h5>
                    <p class="card-text">Read customer reviews and feedback forms.</p>
                    <a href="/Feedback/Index" class="btn btn-outline-info">View Feedback</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center mt-4">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-sm border-0 bg-light">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Other Admin Tools</h4>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a href="/Guide/Index" class="text-decoration-none">Manage Tour Guides</a>
                        </li>
                        
                        
                        
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
