@model List<Assignment2tga.Models.TourModel>

@{
    ViewBag.Title = "Tours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center my-4">Tour List</h2>

<p>
    @Html.ActionLink("Create New Tour", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Tour Date</th>
            <th>Guide ID</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tour in Model)
        {
            <tr>
                <td>@tour.FirstName</td>
                <td>@tour.LastName</td>
                <td>@tour.TourDate.ToString("yyyy-MM-dd")</td>
                <td>@tour.GuideID</td>
                <td>$@tour.price</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = tour.Id }, new { @class = "btn btn-warning btn-sm me-1" })
                    @Html.ActionLink("Delete", "Delete", new { id = tour.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
