@model List<Assignment2tga.Models.TourModel>

@{
    ViewBag.Title = "Manage Tours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Manage Tours</h2>
        @Html.ActionLink("Create", "Create") 

    </div>

    @if (Model != null && Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Tour Date</th>
                        <th>Guide ID</th>
                        <th>Price</th>
                        <th style="width: 160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tour in Model)
                    {
                        <tr>
                            <td>@tour.FirstName</td>
                            <td>@tour.LastName</td>
                            <td>@tour.TourDate.ToString("yyyy-MM-dd")</td>
                            <td>@tour.GuideID</td>
                            <td>$@tour.price</td>
                            <td>
                                <div class="d-flex gap-2">
                                    @Html.ActionLink("Edit", "Edit", new { id = tour.Id })
                                    @Html.ActionLink("Delete", "Delete", new { id = tour.Id })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No tours found. Click <strong>"Create New Tour"</strong> to add one.
        </div>
    }
</div>
